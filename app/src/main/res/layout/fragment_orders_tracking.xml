<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="30dp"
    android:layout_marginTop="400dp"
    android:layout_marginHorizontal="30dp"
android:background="@drawable/bg_rounded_corner_white"
android:id="@+id/fragment_tracking">

<!-- Tình trạng xác nhận -->
<TextView
    android:id="@+id/title_xac_nhan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tình trạng xác nhận"
    android:textStyle="bold"
    android:textSize="25sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

<TextView
    android:id="@+id/status_xac_nhan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đã xác nhận"
    android:background="@drawable/bg_edittext"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/title_xac_nhan"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="8dp"/>

<!-- Quá trình chuẩn bị -->
<TextView
    android:id="@+id/title_chuan_bi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quá trình chuẩn bị"
    android:textStyle="bold"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/status_xac_nhan"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"/>

<TextView
    android:id="@+id/status_chuan_bi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đang chuẩn bị đơn hàng"
    android:background="@drawable/bg_edittext"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/title_chuan_bi"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="8dp"/>

<!-- Giao hàng -->
<TextView
    android:id="@+id/title_giao_hang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Giao hàng"
    android:textStyle="bold"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/status_chuan_bi"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"/>

<TextView
    android:id="@+id/status_giao_hang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đang giao"
    android:background="@drawable/bg_edittext"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/title_giao_hang"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
