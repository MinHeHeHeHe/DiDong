<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:id="@+id/main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_edit_user_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/container_bars"
            android:gravity="left|top"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container_edit_info_button"
                android:layout_width="291dp"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="82dp"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/img_chevron_left"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_arrow_left" />

                <TextView
                    android:id="@+id/txt_edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="71dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Chỉnh sửa thông tin"
                    android:textColor="#FF000000"
                    android:textSize="24dp" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="29dp">

                <!-- Vùng bo góc chứa giá trị trùng đáy -->
                <RelativeLayout
                    android:id="@+id/container_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_framelayout_rounded"
                    android:paddingTop="18dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="21dp"
                    android:paddingEnd="21dp">

                    <EditText
                        android:id="@+id/txt_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minhee"
                        android:textSize="20sp"
                        android:textColor="#FF000000"
                        android:includeFontPadding="false"
                        android:singleLine="true" />
                </RelativeLayout>

                <!-- Nhãn Tên tài khoản nằm nổi lên -->
                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tài khoản"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:paddingHorizontal="4dp"
                    android:layout_alignTop="@id/container_full_name"
                    android:layout_alignStart="@id/container_full_name"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-10dp" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="29dp">

                <!-- Vùng bo góc chứa giá trị trùng đáy -->
                <RelativeLayout
                    android:id="@+id/container_full_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_framelayout_rounded"
                    android:paddingTop="18dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="21dp"
                    android:paddingEnd="21dp">

                    <EditText
                        android:id="@+id/txt_full_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="04/05/2004"
                        android:textSize="20sp"
                        android:textColor="#FF000000"
                        android:includeFontPadding="false"
                        android:singleLine="true" />
                </RelativeLayout>

                <!-- Nhãn Tên tài khoản nằm nổi lên -->
                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:paddingHorizontal="4dp"
                    android:layout_alignTop="@id/container_full_birthday"
                    android:layout_alignStart="@id/container_full_birthday"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-10dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="29dp">

                <!-- Vùng bo góc chứa giá trị trùng đáy -->

                <!-- Nhãn Tên tài khoản nằm nổi lên -->
                <RelativeLayout
                    android:id="@+id/container_full_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/bg_framelayout_rounded"
                    android:paddingStart="21dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="21dp"
                    android:paddingBottom="12dp">

                    <EditText
                        android:id="@+id/txt_full_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="03030303"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="#FF000000"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:paddingHorizontal="4dp"
                    android:layout_alignTop="@id/container_full_phone"
                    android:layout_alignStart="@id/container_full_phone"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-10dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="29dp">

                <!-- Vùng bo góc chứa giá trị trùng đáy -->
                <RelativeLayout
                    android:id="@+id/container_full_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_framelayout_rounded"
                    android:paddingTop="18dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="21dp"
                    android:paddingEnd="21dp">

                    <EditText
                        android:id="@+id/txt_full_address"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint=" 123 Phạm Văn Đồng, phường 13, quận Bình Thạnh, TP.HCM"
                        android:textSize="20sp"
                        android:textColor="#FF000000"
                        android:includeFontPadding="false"
                        android:singleLine="false"
                         />
                </RelativeLayout>

                <!-- Nhãn Tên tài khoản nằm nổi lên -->
                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:paddingHorizontal="4dp"
                    android:layout_alignTop="@id/container_full_address"
                    android:layout_alignStart="@id/container_full_address"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-10dp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/container_change_button"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_rectangle3"
                    android:text="Thay đổi"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp"
                    android:gravity="center" />

            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>