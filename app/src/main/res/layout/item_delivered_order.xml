<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icon đồ ăn bên trái -->
        <ImageView
            android:id="@+id/img_delivered_item"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/img_delivered_item"
            android:scaleType="centerCrop"
            android:padding="12dp" />

        <!-- Phần text chính giữa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:03 AM - 6 Tháng 3 năm 2025"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_delivery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 112.000đ"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
