<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5E00"/> <!-- màu nền cam -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Khi không chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- không nền -->
            <stroke android:width="1dp" android:color="#FF5E00"/> <!-- viền cam -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>